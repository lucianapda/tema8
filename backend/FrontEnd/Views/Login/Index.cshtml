@{
    ViewBag.Title = "Login";

    bool UsuarioOuSenhaInvalidos = ViewBag.ErroLogin == true;
    bool AcessoNaoPermitido = ViewBag.AcessoNaoPermitido == true;
    bool UsuarioDesativado = ViewBag.UsuarioDesativado == true;
}




<section class="row sm-vcenter login-box">
    <div class="col-sm-4 col-sm-offset-4">
        @using (Html.BeginForm("Index", "Login", new { ReturnUrl = Request.QueryString["ReturnUrl"] }, FormMethod.Post))
        {

            @Html.AntiForgeryToken()

            @*<div class="form-group text-center">
                <img class="jequiti-logo" src="@(Url.Content("~/Images/logo_jequiti.png"))" alt="Jequiti" title="Jequiti" />
            </div>*@

            if (UsuarioOuSenhaInvalidos)
            {
                <div class="form-group">
                    <div class="alert alert-danger" role="alert"><span class="glyphicon glyphicon-exclamation-sign"></span>&nbsp;Usuário e/ou senha inválido(s)</div>
                </div>
            }
            else if (AcessoNaoPermitido)
            {
                <div class="form-group">
                    <div class="alert alert-danger" role="alert"><span class="glyphicon glyphicon-exclamation-sign"></span>&nbsp;Acesso não autorizado</div>
                </div>
            }
            else if (UsuarioDesativado)
            {
                <div class="form-group">
                    <div class="alert alert-danger" role="alert"><span class="glyphicon glyphicon-exclamation-sign"></span>&nbsp;Usuário inativo</div>
                </div>

            }

            <div class="form-group">
                <label for="Usuario">Usuário</label>
                <input type="text" class="form-control" id="Login" name="Login">
            </div>

            <div class="form-group">
                <label for="Senha">Senha</label>
                <input type="password" class="form-control" id="Senha" name="Senha">
            </div>

            <div class="form-group col-sm-6 col-sm-offset-6 v-padding-0">
                <button id="btnEntrar" type="submit" class="btn btn-default pull-right">Entrar</button>
            </div>
        }
    </div>
</section>

