@model Aplicacao.Dto.LaboratorioDto

@{
    ViewBag.Title = "Cadastrar";
}
@section Scripts {
    @Scripts.Render("~/Scripts/Laboratorio")

}
<div class="page-header">
    <div class="btn-toolbar pull-right">

        <a href="@Url.Action("Index", "Laboratorio")" class="btn btn-primary">
             <span class="glyphicon glyphicon-chevron-left"></span>&nbsp;Voltar
        </a>

    </div>
    <h3>@ViewBag.Title</h3>
</div> <!-- Cabeçalho -->
<div id="alerts"></div>

@using (Html.BeginForm("Cadastrar", "Laboratorio", FormMethod.Post, new { novalidate = "" }))
{

    <div class="row">
        <div class="form-group col-xs-12 col-md-6">
            <label class="control-label">Descrição *</label>
            @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control", @maxlength = "100" } })
            @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="row">
        <div class="form-group col-xs-12 col-md-6">
            <label class="control-label">Bloco *</label>
            @Html.EditorFor(model => model.Bloco, new { htmlAttributes = new { @class = "form-control", @maxlength = "100" } })
            @Html.ValidationMessageFor(model => model.Bloco, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="row">
        <div class="form-group col-xs-12 col-md-6">
            <label class="control-label">Número Sala *</label>
            @Html.EditorFor(model => model.NumeroSala, new { htmlAttributes = new { @class = "form-control", @maxlength = "100" } })
            @Html.ValidationMessageFor(model => model.NumeroSala, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="row">
        <div class="form-group col-xs-12 col-md-6">
            <label class="control-label">Quantidade Máquinas *</label>
            @Html.EditorFor(model => model.QtdMaquinas, new { htmlAttributes = new { @class = "form-control", @maxlength = "100" } })
            @Html.ValidationMessageFor(model => model.QtdMaquinas, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="row">
        <div class="pull-right col-xs-12 col-sm-4">
            <br />
            <label class="d-block hidden-xs col-sm-8">&nbsp;</label>
            <button type="submit" class="btn btn-success col-xs-12 col-sm-4" style="vertical-align:bottom">
                <span class="glyphicon glyphicon-ok"></span>&nbsp;Salvar
            </button>
        </div> <!-- Botão de ação -->
    </div>


}