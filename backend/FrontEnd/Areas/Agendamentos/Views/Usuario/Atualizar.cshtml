@model Aplicacao.Dto.UsuarioDto

@{
    ViewBag.Title = "Atualizar";
}

<div class="page-header">
    <div class="btn-toolbar pull-right">

        <a href="@Url.Action("Index", "Usuario")" class="btn btn-default">
            <span class="glyphicon glyphicon-chevron-left"></span>&nbsp;Voltar
        </a>

    </div>
    <h3>@ViewBag.Title</h3>
</div> <!-- Cabeçalho -->
@using (Html.BeginForm("Atualizar", "Usuario", FormMethod.Post, new { novalidate = "" }))
{

    <div class="row">
        <div class="form-group col-xs-12 col-md-6">
            <label class="control-label">Nome *</label>
            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", @maxlength = "100" } })
            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="row">
        <div class="form-group col-xs-12 col-md-6">
            <label class="control-label">Login *</label>
            @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @disabled = "disabled", @class = "form-control", @maxlength = "100" } })
            @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="row">
        <div class="form-group col-xs-12 col-md-6">
            <label class="control-label">Senha *</label>
            @Html.PasswordFor(model => model.Senha, new { htmlAttributes = new { @class = "form-control", @maxlength = "100" } })
            @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="row">
        <div class="form-group col-xs-12 col-md-6">
            <label class="control-label">Confirmar Senha *</label>
            @Html.PasswordFor(model => model.ConfirmarSenha, new { htmlAttributes = new { @class = "form-control", @maxlength = "100" } })
            @Html.ValidationMessageFor(model => model.ConfirmarSenha, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="row">
        <div class="form-group text-right col-md-2 col-xs-12 ">
            <button type="submit" class="btn btn-primary col-xs-12">
                <span class="glyphicon glyphicon-ok"></span>
                &nbsp;Salvar
            </button>
        </div> <!-- Botão de Ação-->
    </div>
}